<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:isScrollContainer="true"
    tools:context=".Fragments.MgAccount">


    <ImageButton
        android:id="@+id/img_btn_edit_acc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:layout_weight="1"
        android:background="@color/transperent"
        android:src="@drawable/ic_mode_edit_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline_white"
                android:text="Manage Account Information"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit_qrcode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/esafe" />

            <EditText
                android:id="@+id/edit_acc_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="UserID"
                android:inputType="textPersonName"
                android:padding="15dp" />


            <EditText
                android:id="@+id/edit_acc_nin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="National ID"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/edit_acc_passport"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Passport"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/edit_acc_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/your_name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/edit_acc_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Email"
                android:inputType="phone"
                android:padding="15dp" />

            <EditText
                android:id="@+id/edit_acc_tel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/et_custom"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="Number"
                android:inputType="phone"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn_editaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_custom"
                android:text="Confirm Information"
                android:textColor="@android:color/white"
                android:visibility="gone" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/underline_white"
                android:text="Notice"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently All Account Editing features are disabled" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>